                        Style="{StaticResource TBlockBold16}"                       
                        Text="{Binding SelectedLogger.LoggerName}"/>
    </StackPanel>

    <!  date1  >
    <StackPanel Orientation="Horizontal">
        <TextBlock  Margin="5" Width="200" 
                            Text="Дата 1: "/>
